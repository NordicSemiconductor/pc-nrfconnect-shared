{
  "name": "pc-nrfconnect-shared",
  "version": "4.7.0",
  "description": "Shared commodities for developing pc-nrfconnect-* packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/NordicSemiconductor/pc-nrfconnect-shared.git"
  },
  "author": "Nordic Semiconductor ASA",
  "license": "ISC",
  "bin": {
    "nrfconnect-scripts": "./bin/nrfconnect-scripts.js"
  },
  "main": "src",
  "scripts": {
    "lint": "node ./bin/nrfconnect-scripts.js lint src",
    "test": "jest --testResultsProcessor jest-bamboo-formatter src",
    "test-watch": "jest --watch src"
  },
  "dependencies": {
    "@babel/core": "7.5.0",
    "@babel/plugin-proposal-class-properties": "7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "7.5.0",
    "@babel/plugin-transform-destructuring": "7.5.0",
    "@babel/plugin-transform-modules-commonjs": "7.5.0",
    "@babel/plugin-transform-parameters": "7.4.4",
    "@babel/plugin-transform-spread": "7.2.2",
    "@babel/preset-react": "7.0.0",
    "@testing-library/jest-dom": "5.1.1",
    "@testing-library/react": "9.3.2",
    "babel-eslint": "10.0.2",
    "babel-loader": "8.0.6",
    "babel-plugin-add-module-exports": "1.0.2",
    "commander": "4.1.1",
    "cross-env": "5.2.0",
    "css-loader": "3.0.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-loader": "2.2.1",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "1.7.0",
    "file-loader": "4.0.0",
    "ftp": "0.3.10",
    "husky": "3.1.0",
    "immutable": "4.0.0-rc.12",
    "jest": "25.1.0",
    "jest-bamboo-formatter": "1.0.1",
    "jquery": "3.5.0",
    "moment": "2.24.0",
    "mousetrap": "1.6.3",
    "prettysize": "2.0.0",
    "raw-loader": "3.0.0",
    "react": "16.12.0",
    "react-bootstrap": "1.0.0-beta.16",
    "react-dom": "16.12.0",
    "react-ga": "2.7.0",
    "react-markdown": "4.2.2",
    "react-redux": "7.1.3",
    "react-test-renderer": "16.12.0",
    "redux": "4.0.4",
    "redux-devtools-extension": "2.13.8",
    "redux-thunk": "2.3.0",
    "rimraf": "2.6.3",
    "sass": "1.23.3",
    "sass-loader": "7.1.0",
    "semver": "6.2.0",
    "shasum": "1.0.2",
    "style-loader": "0.23.1",
    "systeminformation": "4.14.1",
    "url-loader": "2.0.1",
    "webpack": "4.43.0",
    "winston": "3.2.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "<rootDir>/mocks/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/mocks/emptyMock.js",
      "electron": "<rootDir>/mocks/electronMock.js",
      "pc-nrfjprog-js|nrf-device-lister|nrf-device-setup": "<rootDir>/mocks/emptyMock.js"
    },
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./config/babel.config.js"
        }
      ]
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ]
  }
}
