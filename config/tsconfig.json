{
    "ts-node": { "swc": true },

    "compilerOptions": {
        "target": "ES2019",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",

        "strict": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "useUnknownInCatchVariables": true
    }
}
